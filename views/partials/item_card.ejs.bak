<script type="text/javascript" src="/functions.js"></script>
<div class="product">
    <% if (item.feat_img) { %>
        <img src='<%=item.feat_img%>'>
    <% } else { %>
        <br><br>
        <p>Oops! Photo missing</p>
    <% }; %>
    <h3><%=item.prod_name%></h3>
    <p><%=item.description%></p>
    <form action="/single_item" method="post">
        <input id="prod_id" name="prod_id" class="hide-me" value="<%=item.prod_id%>">
        <input type="submit" value="Have a look">
    </form>
</div>